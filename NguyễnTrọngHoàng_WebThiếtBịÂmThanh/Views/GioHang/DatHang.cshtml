@using NguyễnTrọngHoàng_WebThiếtBịÂmThanh.Models
@{
    ViewBag.Title = "ĐƠN ĐẶT HÀNG";
    Layout = null;
}
<div style="background: radial-gradient( circle, rgba(86, 236, 214, 1) 30%, rgba(119, 0, 236, 0.8) 100%); height: 200%">
    <h2 style="text-align:left; padding-left:265; padding-top:20">THÔNG TIN HÀNG HÓA</h2>
    <table align="left" border="1" style="background-color: white; margin-left: 50">
        <tr style="text-align:center; font-weight:bold">
            <td> Mã sản phẩm </td>
            <td> Tên sản phẩm </td>
            <td> Hình ảnh </td>
            <td> Đơn giá </td>
            <td> Số lượng </td>
            <td> Thành tiền </td>
        </tr>
        @foreach (var item in Model)
        {
            <tr style="text-align:center; font-weight:bold">
                <td> @item.iIdSanPham </td>
                <td> @item.sTenSanPham </td>
                <td><img src="~/Content/images/@item.sHinhAnhSP" style="width: 150px" /></td>
                @using (Html.BeginForm("CapNhatGioHang", "GioHang", new { @iMaSP = item.iIdSanPham }))
                {
                    <td> @item.iDonGia </td>
                    <td>
                        @item.iSoLuong
                    </td>
                    <td> @item.iThanhTien </td>
                }
            </tr>
        }
        <tr style="font-weight:bold; text-align: center; color: red;">
            <td colspan="3"> Số lượng sản phẩm: @ViewBag.Tongsoluong </td>
            <td colspan="3"> Tổng tiền: @ViewBag.Tongtien VNĐ </td>
        </tr>
        <tr style="font-weight: bold; color: blue; text-align: right">
            <td colspan="6">
                @Html.ActionLink("TRỞ VỀ GIỎ HÀNG", "GioHang", "GioHang")
            </td>
        </tr>
    </table>

    <h2 style="text-align:right; padding-right: 250">THÔNG TIN ĐẶT HÀNG</h2>
    @{
        KhachHang kh = (KhachHang)Session["Taikhoan"];
    }
    <table align="right" style="padding-right: 205">
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)
            <tr style="height:40px">
                <td> Họ tên khách hàng:</td>
                <td style="font-weight:bold"> @kh.hoTenKH </td>
            </tr>
            <tr style="height:40px">
                <td> Địa chỉ khách hàng:</td>
                <td style="font-weight:bold"> @kh.diaChiKH</td>
            </tr>
            <tr style="height:40px">
                <td> Số điện thoại khách hàng:</td>
                <td style="font-weight:bold"> @kh.soDienThoaiKH</td>
            </tr>
            <tr style="height:40px">
                <td> Ngày đặt:</td>
                <td style="font-weight:bold"> @DateTime.Now.ToShortDateString() </td>
            </tr>
            <tr style="height:40px">
                <td> Ngày giao:</td>
                <td style="font-weight:bold">
                    <input type="date" name="NgayGiao" />
                </td>
            </tr>
            <tr style="height:40px">
                <td> Tên người nhận:</td>
                <td>
                    @Html.TextBox("tenNguoiNhan")
                </td>
            </tr>
            <tr style="height:40px">
                <td> Địa chỉ người nhận:</td>
                <td>
                    @Html.TextBox("diaChiNguoiNhan")
                </td>
            </tr>
            <tr style="height:40px">
                <td> Số điện thoại người nhận:</td>
                <td>
                    @Html.TextBox("sđtNguoiNhan")
                </td>
            </tr>
            <tr style="height:40px">
                <td> Ghi chú đơn hàng:</td>
                <td>
                    @Html.TextBox("ghiChuDH")
                </td>
            </tr>
            <tr style="height:40px">
                <td></td>
                <td>
                    <input type="submit" value="ĐỒNG Ý ĐẶT HÀNG" style="background-color:red; border-radius:15px; height:30px; color:white"/>
                </td>
            </tr>
        }
    </table>
</div>