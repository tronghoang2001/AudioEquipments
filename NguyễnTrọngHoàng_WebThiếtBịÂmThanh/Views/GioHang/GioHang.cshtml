@using NguyễnTrọngHoàng_WebThiếtBịÂmThanh.Models
@model List<GioHang>
@{
    ViewBag.Title = "GioHang";
    Layout = null;
}
<div style="background: radial-gradient( circle, rgba(86, 236, 214, 1) 30%, rgba(119, 0, 236, 0.8) 100%); width:100%;">
    <h2 style="text-align: center; width: 100%; height: 50px; padding: 20px; padding-top:60px ">
        THÔNG TIN GIỎ HÀNG
    </h2>
    <table align="center" border="1" style="background-color:white;">
        <tr style="text-align:center; font-weight:bold">
            <td> Mã sản phẩm </td>
            <td> Tên sản phẩm </td>
            <td> Hình ảnh </td>
            <td> Đơn giá </td>
            <td> Số lượng </td>
            <td> Thành tiền </td>
            <td width="50px"></td>
            <td width="50px"></td>
            <td width="50px"></td>
        </tr>
        @foreach (var item in Model)
        {
            <tr style="text-align:center; font-weight:bold">
                <td> @item.iIdSanPham </td>
                <td> @item.sTenSanPham </td>
                <td><img src="~/Content/images/@item.sHinhAnhSP" style="width: 150px" /></td>
                @using (Html.BeginForm("CapNhatGioHang", "GioHang", new { @iMaSP = item.iIdSanPham }))
                {
                    <td> @item.iDonGia </td>
                    <td>
                        <input type="number" min="1" name="txtSoLuong" value="@item.iSoLuong" style="background-color:yellow" />
                    </td>
                    <td> @item.iThanhTien </td>
                    <td> <a href="@Url.Action("Details", "ThietBiAmThanh", new { id = item.iIdSanPham})"> Chi tiết </a></td>
                    <td> @Html.ActionLink("Xóa", "XoaGioHang", new { @iMaSP = item.iIdSanPham })</td>
                    <td> <input type="submit" value="Cập nhật" /></td>
                }
            </tr>
        }
        <tr style="font-weight:bold; text-align: center; color: red;">
            <td colspan="4"> Số lượng sản phẩm: @ViewBag.Tongsoluong </td>
            <td colspan="5"> Tổng tiền: @ViewBag.Tongtien VNĐ </td>
        </tr>
        <tr style="font-weight: bold; color: blue; text-align: center">
            <td colspan="9">
                @Html.ActionLink("Xóa Giỏ Hàng", "XoaTatCaGioHang")
            </td>
        </tr>
        <tr style="font-weight: bold; color: blue">
            <td colspan="9" align="center">
                @Html.ActionLink("ĐẶT HÀNG", "DatHang", "GioHang")
            </td>
        </tr>
    </table>
</div>


