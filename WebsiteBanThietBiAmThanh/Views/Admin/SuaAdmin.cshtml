@model WebsiteBanThietBiAmThanh.Models.Admin

@{
    ViewBag.Title = "SuaAdmin";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>SỬA THÔNG TIN ADMIN</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2" for="UserAdmin">Tài khoản </label>
            <div class="col-md-10">
                <label class="form-control form-control-lg" for="UserAdmin">@Model.UserAdmin</label>
            </div> 
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="Hoten">Họ tên</label>
            <div class="col-md-10">
                <input id="Hoten" name="Hoten" type="text" value="@Model.Hoten" class="form-control form-control-lg" />
                @ViewData["Loi2"]
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="NewPassAdmin">Mật khẩu mới</label>
            <div class="col-md-10">
                <input id="NewPassAdmin" name="NewPassAdmin" type="text" class="form-control form-control-lg" />
                @ViewData["Loi1"]
            </div>
        </div>



        @Html.HiddenFor(model => model.idAdmin)

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Trở về trang Admin", "TaiKhoanAdmin")
</div>
