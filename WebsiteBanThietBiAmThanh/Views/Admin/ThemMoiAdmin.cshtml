@model WebsiteBanThietBiAmThanh.Models.Admin

@{
    ViewBag.Title = "ThemMoiAdmin";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<br />
<h2 style="text-align: center">TẠO TÀI KHOẢN ADMIN</h2>
<br />
@using (Html.BeginForm("ThemMoiAdmin", "admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label class="control-label col-md-2" for="Hoten">Họ tên</label>
            <div class="col-md-10">
                <input id="Hoten" name="Hoten" type="text" class="form-control" />
                @ViewData["Loi1"]
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="UserAdmin">Tài khoản</label>
            <div class="col-md-10">
                <input id="UserAdmin" name="UserAdmin" type="text" class="form-control" />
                @ViewData["Loi2"]
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="PassAdmin">Mật khẩu</label>
            <div class="col-md-10">
                <input id="PassAdmin" name="PassAdmin" type="text" class="form-control" />
                @ViewData["Loi3"]
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Trở về", "TaiKhoanAdmin")
</div>
