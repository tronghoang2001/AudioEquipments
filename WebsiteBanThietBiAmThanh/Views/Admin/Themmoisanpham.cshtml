@model WebsiteBanThietBiAmThanh.Models.SanPham

@{
    ViewBag.Title = "Themmoisanpham";
    Layout = null;
}

<link href="~/Content/style.css" rel="stylesheet" />
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link rel="stylesheet" href="~/Content/adminlayout.css" />
<script src="~/tinymce/js/tinymce/tinymce.min.js"></script>
<script>tinymce.init({ selector: 'textarea' });</script>
<div class="header"></div>
@Html.Partial("sideBarMenu")
<div style="margin-top:100px; margin-bottom:100px">
    <h2 style="color:blue">THÊM SẢN PHẨM MỚI</h2>
    @using (Html.BeginForm("Themmoisanpham", "admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <label class="control-label col-md-2" for="tenSanPham">Tên sản phẩm</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.tenSanPham, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.tenSanPham, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2" for="giaSanPham">Giá sản phẩm</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.giaSanPham, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.giaSanPham, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2" for="hinhAnhSP">Hình ảnh sản phẩm</label>
                <div class="col-md-10">
                    <input type="file" name="fileUpload" />
                    @*thongbaotrung*@
                    @ViewBag.Thongbao
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2" for="chiTietSP">Chi tiết sản phẩm</label>
                <div class="col-md-10">
                    @*<textarea name="chiTietSP">@Model.chiTietSP</textarea>*@

                    <textarea name="chiTietSP">Mô tả thông tin sản phẩm...</textarea>
                    @*@Html.EditorFor(model => model.chiTietSP, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.chiTietSP, "", new { @class = "text-danger" })*@
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2" for="idLoai">Loại sản phẩm</label>
                <div class="col-md-10">
                    @Html.DropDownList("idLoai")
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2" for="idThuongHieu">Thương hiệu</label>
                <div class="col-md-10">
                    @Html.DropDownList("idThuongHieu")
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input style="background-color:blue;color:white;" type="submit" value="THÊM MỚI" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Trở về trang sản phẩm", "Sanpham")
    </div>
</div>
@Html.Partial("Footer")