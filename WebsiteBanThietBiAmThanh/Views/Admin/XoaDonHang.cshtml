@model WebsiteBanThietBiAmThanh.Models.DonHang

@helper Truncate(string input, int length)
{
    if (input.Length < length)
    {
        @input
    }
    else
    {
        @input.Substring(0, length)<text>...</text>
    }
}

@{
    ViewBag.Title = "XoaDonHang";
    Layout = null;
    String truncate = Truncate(Model.ghiChuDH, 50).ToString();
}

<html lang="en">
<head>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:400,700">
    <!-- https://fonts.google.com/specimen/Roboto -->
    <link rel="stylesheet" href="~/Content/font-awesome.min.css">
    <!-- https://fontawesome.com/ -->
    <link rel="stylesheet" href="~/jquery-ui-datepicker/jquery-ui.min.css" type="text/css">
    <!-- http://api.jqueryui.com/datepicker/ -->
    <link rel="stylesheet" href="~/Content/bootstrap.min.css">
    <!-- https://getbootstrap.com/ -->
    <link rel="stylesheet" href="~/Content/templatemo-style.css">
    <!--
    Product Admin CSS Template
    https://templatemo.com/tm-524-product-admin
    -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>

<body>
    @Html.Partial("MenuAdmin")
    <div class="container tm-mt-big tm-mb-big">
        <div class="row">
            <div class="col-xl-9 col-lg-10 col-md-12 col-sm-12 mx-auto">
                <div class="tm-bg-primary-dark tm-block tm-block-h-auto">
                    <div class="row">
                        <div class="col-12">
                            <h2 class="tm-block-title d-inline-block">XÁC NHẬN XÓA ĐƠN HÀNG</h2>
                        </div>
                    </div>

                    <div class="row tm-edit-product-row">
                        <div class="col-xl-6 col-lg-6 col-md-12">
                            <form>
                                <div class="form-group mb-3">
                                    <label for="tieuDeTin">
                                        Mã đơn hàng: @Model.idDonHang
                                    </label>
                                </div>
                                <div class="form-group mb-3">
                                    <label for="tieuDeTin">
                                        Tên khách hàng: @Model.TenKhachHang
                                    </label>
                                </div>
                                <div class="form-group mb-3">
                                    <label for="tieuDeTin">
                                        Ghi chú: @Html.Raw(HttpUtility.HtmlDecode(truncate))
                                    </label>
                                </div>
                                <div class="form-group mb-3">
                                    <label for="tieuDeTin">
                                        Thành tiền: @String.Format("{0:0,0}", Model.ThanhTien) VNĐ
                                    </label>
                                </div>
                                <div class="form-group mb-3">
                                    <label for="tieuDeTin">
                                        Ngày đặt: @String.Format("{0:dd-MM-yyyy}", Model.ngayDat)
                                    </label>
                                </div>
                            </form>
                        </div>
                        

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary btn-block text-uppercase">XÓA</button>
                                <a class="btn btn-primary btn-block text-uppercase" href="@Url.Action("DonHang")">Về Trang Chủ</a>
                            </div>
                        }

                    </div>

                </div>
            </div>
        </div>
    </div>
    @Html.Partial("FooterAdmin")

    <script src="js/jquery-3.3.1.min.js"></script>
    <!-- https://jquery.com/download/ -->
    <script src="jquery-ui-datepicker/jquery-ui.min.js"></script>
    <!-- https://jqueryui.com/download/ -->
    <script src="js/bootstrap.min.js"></script>
    <!-- https://getbootstrap.com/ -->
    <script>
        $(function () {
            $("#expire_date").datepicker();
        });
    </script>


    <div id="ui-datepicker-div" class="ui-datepicker ui-widget ui-widget-content ui-helper-clearfix ui-corner-all"></div>
</body>
</html>
