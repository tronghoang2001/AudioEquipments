
@{
    ViewBag.Title = "DangNhap";
    Layout = null;
}
<body style="background: radial-gradient( circle, rgba(86, 236, 214, 1) 30%, rgba(119, 0, 236, 0.8) 100%)">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="https://mdbcdn.b-cdn.net/wp-content/themes/mdbootstrap4/docs-app/css/dist/mdb5/standard/core.min.css">
    <link rel="stylesheet" id="roboto-subset.css-css" href="https://mdbcdn.b-cdn.net/wp-content/themes/mdbootstrap4/docs-app/css/mdb5/fonts/roboto-subset.css?ver=3.9.0-update.5" type="text/css" media="all">

    <section class="vh-100" style="background: radial-gradient( circle, rgba(86, 236, 214, 1) 30%, rgba(119, 0, 236, 0.8) 100%)">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col col-xl-10">
                    <div class="card" style="border-radius: 1rem;">
                        <div class="row g-0">
                            <div class="col-md-6 col-lg-5 d-none d-md-block">
                                <img src="~/Content/images/logoLogin2.jpg"
                                     alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
                            </div>
                            <div class="col-md-6 col-lg-7 d-flex align-items-center">
                                <div class="card-body p-4 p-lg-5 text-black">
                                    <h4 style="color:red; text-align:center"> @ViewBag.ThongBao</h4>
                                    <div class="d-flex align-items-center mb-3 pb-1">
                                        <a href="@Url.Action("Index","ThietBiAmThanh")">
                                            <img src="~/Content/images/logoDisplay.png" style="width:200px;" /></a>
                                            <span class="h1 fw-bold mb-0">Đăng Nhập</span>
                                    </div>

                                    <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Đăng nhập vào tài khoản của bạn!</h5>
                                    @using (Html.BeginForm())
                                    {
                                        @Html.ValidationSummary(true)
                                        <div class="form-outline mb-4">
                                            <input id="taiKhoanKH" name="taiKhoanKH" type="text" value="" class="form-control form-control-lg" />
                                            @ViewData["Loi1"]
                                            <label class="form-label" for="form2Example17">Tên đăng nhập</label>
                                        </div>

                                        <div class="form-outline mb-4">
                                            <input id="matKhauKH" name="matKhauKH" type="password" class="form-control form-control-lg" />
                                            @ViewData["Loi2"]
                                            <label class="form-label" for="form2Example27">Mật khẩu</label>
                                        </div>

                                        <div class="pt-1 mb-4">
                                            <input class="btn btn-dark btn-lg btn-block" type="submit" value="Đăng nhập" style="background-color:rgba(119, 0, 236, 0.8); color:white">
                                        </div>
                                    }

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
<!-- MDB -->
<script type="text/javascript"
        src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/4.1.0/mdb.min.js"></script>
