@using WebsiteBanThietBiAmThanh.Models
@{
    ViewBag.Title = "BinhLuan";
    Layout = null;
}
<link rel="stylesheet" href="~/Content/style.css" />
<link rel="stylesheet" href="~/Content/comment.css">
<link rel="stylesheet" href="~/Content/bootstrap.css"/>    
@{
    KhachHang kh = (KhachHang)Session["Taikhoan"];
}
@Html.Partial("Menu")
    <div class="wrapper">
        <div class="inner">
            <h1>Bình Luận</h1>
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(true)
                <div id="nameCustomer">Tên khách hàng: @kh.hoTenKH</div>
                <label class="form-group">
                    <textarea id="noiDungBL" name="noiDungBL" type="text" class="form-control" required=""></textarea>
                    <span>Bình luận của bạn</span>
                </label>
                <button>Submit</button>
            }
        </div>
    </div>
@Html.Partial("Footer")